<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/additional_info_input_layout"
    tools:context="com.blogspot.athletio.AdditionalInfoInputActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="BirthDate"
            android:textSize="20dp"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text=" Year:"
                android:textSize="15dp"/>
            <Spinner
                android:id="@+id/additional_info_input_layout_year_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp">
            </Spinner>
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Month:"
                android:textSize="15dp"/>
            <Spinner
                android:id="@+id/additional_info_input_layout_month_spinner"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:textSize="10dp">
            </Spinner>
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Day:"/>
            <Spinner
                android:id="@+id/additional_info_input_layout_day_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="10dp">
            </Spinner>
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text=" Gender:"
               />
           <Spinner
               android:id="@+id/additional_info_input_layout_gender_spinner"
               android:layout_width="100dp"
               android:layout_height="wrap_content"
               android:textAlignment="center"
               android:textSize="10dp">
           </Spinner>
       </LinearLayout>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Height (cm)"/>
        <EditText
            android:id="@+id/additional_info_input_layout_height_edittext"
            android:layout_width="match_parent"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Weight (Kg)"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/additional_info_input_layout_weight_edittext"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:textAlignment="center" />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
        <Button
            android:id="@+id/additional_info_input_layout_submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>




</RelativeLayout>
